{
    "name": "Svelte Typescript Chrome Extension Boilerplate",
    "description": "Boilerplate for Chrome Extension Svelte Typescript project",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/icons/qiita-notion-logo16.png",
        "32": "/icons/qiita-notion-logo32.png",
        "48": "/icons/qiita-notion-logo48.png",
        "128": "/icons/qiita-notion-logo128.png"
    },
    "host_permissions": [
        "https://qiita.com/*",
        "https://api.notion.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://qiita.com/*"],
            "css": ["./logo.css"],
            "js": ["build/content_script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/icons/qiita-notion-logo16.png",
            "32": "/icons/qiita-notion-logo32.png",
            "48": "/icons/qiita-notion-logo48.png",
            "128": "/icons/qiita-notion-logo128.png"
        }
    },
    "permissions": ["storage", "activeTab", "tabs"]
}
